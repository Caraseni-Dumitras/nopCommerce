@model ConfigurationModel

@using Nop.Plugin.ProductProvider.Infigo.Models

@{
    Layout = "_ConfigurePlugin";
}

<div class="card">
    <div class="card-body">
        <div class="card-text">
            <form asp-controller="ProductProviderInfigo" asp-action="Configure" method="post">
                <div class="form-group">
                    <input name="ExternalApiUrl" type="text" value="@Model.ExternalApiUrl" asp-for="ExternalApiUrl" placeholder="Insert Api Url" class="form-control">
                    <nop-label asp-for="ExternalApiUrl"/>
                </div>
                <button class="btn btn-primary" type="submit">Save</button>
            </form>
        </div>
    </div>
</div>
