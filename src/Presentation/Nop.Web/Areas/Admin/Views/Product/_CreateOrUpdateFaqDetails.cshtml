@model FaqModel

@using Nop.Web.Areas.Admin.Models.FAQs

<div asp-validation-summary="ModelOnly"></div>
<input asp-for="Id" type="hidden" />
<input asp-for="ProductId" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ForumGroupDetailsTop, additionalData = Model })
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-1">
                                <nop-label asp-for="CategoryName"/>
                            </div>
                            <div class="col-md-11">
                                <nop-select asp-for="CategoryId" asp-items="Model.AvailableCategories" asp-multiple="false"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-1">
                                <nop-label asp-for="QuestionTitle"/>
                            </div>
                            <div class="col-md-11">
                                <nop-editor asp-for="QuestionTitle" asp-required="true"/>
                                <span asp-validation-for="QuestionTitle"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-1">
                                <nop-label asp-for="QuestionDescription"/>
                            </div>
                            <div class="col-md-11">
                                <nop-textarea asp-for="QuestionDescription" asp-required="true"/>
                                <span asp-validation-for="QuestionDescription"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-1">
                                <nop-label asp-for="AnswerTitle"/>
                            </div>
                            <div class="col-md-11">
                                <nop-editor asp-for="AnswerTitle" asp-required="true"/>
                                <span asp-validation-for="AnswerTitle"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-1">
                                <nop-label asp-for="AnswerDescription"/>
                            </div>
                            <div class="col-md-11">
                                <nop-textarea asp-for="AnswerDescription" asp-required="true"/>
                                <span asp-validation-for="AnswerDescription"></span>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ForumGroupDetailsBottom, additionalData = Model })
            </div>
        </div>
    </div>
</section>