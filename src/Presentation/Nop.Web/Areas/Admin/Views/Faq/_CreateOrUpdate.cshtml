@model FaqModel

@using Nop.Web.Areas.Admin.Models.FAQs

<div asp-validation-summary="ModelOnly"></div>

<div class="form-group row">
    <div class="col-md-1">
        <nop-label asp-for="QuestionTitle"/>
    </div>
    <div class="col-md-11">
        <nop-editor asp-for="QuestionTitle" asp-required="true"/>
        <span asp-validation-for="QuestionTitle"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-1">
        <nop-label asp-for="QuestionDescription"/>
    </div>
    <div class="col-md-11">
        <nop-textarea asp-for="QuestionDescription" asp-required="true"/>
        <span asp-validation-for="QuestionDescription"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-1">
        <nop-label asp-for="AnswerTitle"/>
    </div>
    <div class="col-md-11">
        <nop-editor asp-for="AnswerTitle" asp-required="true"/>
        <span asp-validation-for="AnswerTitle"></span>
    </div>
</div>
<div class="form-group row">
    <div class="col-md-1">
        <nop-label asp-for="AnswerDescription"/>
    </div>
    <div class="col-md-11">
        <nop-textarea asp-for="AnswerDescription" asp-required="true"/>
        <span asp-validation-for="AnswerDescription"></span>
    </div>
</div>